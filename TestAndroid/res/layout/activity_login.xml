<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_gravity="left|center_vertical" android:singleLine="false" android:textSize="22dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New EditText"
            android:id="@+id/editTextUser" android:layout_gravity="left|center_vertical" android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:layout_gravity="left|center_vertical" android:textSize="22dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New EditText"
            android:id="@+id/editTextPass" android:layout_gravity="left|center_vertical" android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:id="@+id/buttonLogin" android:layout_gravity="center" android:textSize="22dp"
            android:paddingLeft="24dp" android:paddingRight="24dp"/>
</LinearLayout>